[
  {
    "label": "Conan install dependencies Debug",
    "cwd": "$ZED_WORKTREE_ROOT",
    "command": "conan",
    "args": [
      "install",
      ".", 
      "--build=missing", 
      "--output-folder=build/Debug", 
      "-s", 
      "build_type=Debug", 
      "--profile:build=clangDebug"
    ],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system"
  },  
  {
    "label": "Conan install dependencies Release",
    "cwd": "$ZED_WORKTREE_ROOT",
    "command": "conan",
    "args": [
      "install",
      ".", 
      "--build=missing", 
      "--output-folder=build/Release", 
      "-s", 
      "build_type=Release", 
      "--profile:build=clangRelease"
    ],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system"
  },  
  {
    "label": "Configure Debug",
    "cwd": "$ZED_WORKTREE_ROOT",
    "command": "cmake",
    "args": [
      "-S",
      ".",
      "-B",
      "build/Debug",
      "-DCMAKE_BUILD_TYPE=Debug",
      "-DCMAKE_C_COMPILER=clang",
      "-DCMAKE_CXX_COMPILER=clang++",
      "-G",
      "Ninja"
    ],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system",
    "dependsOn": "Conan install dependencies Debug"
  },
  {
    "label": "Configure Release",
    "cwd": "$ZED_WORKTREE_ROOT",
    "command": "cmake",
    "args": [
      "-S",
      ".",
      "-B",
      "build/release",
      "-DCMAKE_BUILD_TYPE=Release",
      "-DCMAKE_C_COMPILER=clang",
      "-DCMAKE_CXX_COMPILER=clang++",
      "-G",
      "Ninja"
    ],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system",
    "dependsOn": "Conan install dependencies Release"
  },
  {
    "label": "Build Debug",
    "command": "ninja",
    "cwd": "$ZED_WORKTREE_ROOT/build/Debug",
    "args": ["-j", "8"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never", //on_success",
    "shell": "system",
    "dependsOn": "Configure Debug"
  },
  {
    "label": "Build Release",
    "command": "ninja",
    "cwd": "$ZED_WORKTREE_ROOT/build/release",
    "args": ["-j", "8"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system",
    "dependsOn": "Configure Release"
  },
  {
    "label": "Run Debug",
    "command": "${ZED_WORKTREE_ROOT}/build/Debug/server", // Replace with your actual executable name
    "cwd": "$ZED_WORKTREE_ROOT",
    "args": [],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system",
    "dependsOn": "Build Debug"
  },
  {
    "label": "Run Release",
    "command": "${ZED_WORKTREE_ROOT}/build/release/server", // Replace with your actual executable name
    "cwd": "$ZED_WORKTREE_ROOT",
    "args": [],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system",
    "dependsOn": "Build Release"
  },
  {
    "label": "Debug (gdb)",
    "command": "gdb",
    "cwd": "$ZED_WORKTREE_ROOT",
    "args": ["${ZED_WORKTREE_ROOT}/build/Debug/server"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system",
    "dependsOn": "Build Debug"
  },
  {
    "label": "Debug (lldb)",
    "command": "sudo lldb",
    "cwd": "$ZED_WORKTREE_ROOT",
    "args": ["$ZED_WORKTREE_ROOT/build/Debug/server"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system",
    "dependsOn": "Build Debug"
  },
  {
    "label": "Clean Build Directory",
    "cwd": "$ZED_WORKTREE_ROOT",
    "command": "rm",
    "args": ["-rf", "build/"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "shell": "system"
  }
]
