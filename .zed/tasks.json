[
  {
    "label": "Configure Debug (GCC)",
    "cwd": "$ZED_WORKTREE_ROOT",
    "command": "cmake",
    "args": [
      "-S",
      ".",
      "-B",
      "build/debug",
      "-DCMAKE_BUILD_TYPE=Debug",
      "-DCMAKE_C_COMPILER=gcc",
      "-DCMAKE_CXX_COMPILER=g++",
      "-G",
      "Ninja"
